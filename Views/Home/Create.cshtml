@model DisplayModel
<h2>Criar novo usuário</h2>
<hr />
<div class="row justify-content-center">
    <form class="col-md-5" asp-action="Create">
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="UserName"></span>
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Password"></span>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Email"></span>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="BirthDate"></span>
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Cep" class="control-label"></label>
            <input asp-for="Cep" class="form-control cep" />
        </div>
        <div class="row" id="Pf">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Cpf"></span>
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control cpf" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Rg"></span>
                <label asp-for="Rg" class="control-label"></label>
                <input asp-for="Rg" class="form-control rg" />
            </div>
        </div>
        <div class="row d-none" id="Pj">
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Cnpj"></span>
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control cnpj" />
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Phones"></span>
                <label asp-for="Phones" class="control-label"></label>
                <input asp-for="Phones" class="form-control phone_br" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="TypePhoneId"></span>
                <label asp-for="TypePhoneId" class="control-label"></label>
                <select asp-for="TypePhoneId" class="form-control" asp-items="ViewBag.tipos">
                    <option value="">Tipo...</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Addresses"></span>
                <label asp-for="Addresses" class="control-label"></label>
                <input asp-for="Addresses" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="TypeAdressId"></span>
                <label asp-for="TypeAdressId" class="control-label"></label>
                <select asp-for="TypeAdressId" class="form-control" asp-items="ViewBag.tipos">
                    <option value="">Tipo...</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Criar!" />
            <a class="btn btn-info" asp-controller="Tanques" asp-action="Index">Voltar!</a>
            <button class="btn btn-primary" type="button" id="Switch">Criar pessoa juridica</button>
        </div>
    </form>
</div>

<script>
    var switchButton = document.getElementById("Switch")
    switchButton.addEventListener("click", () => {
        if (switchButton.textContent == "Criar pessoa juridica") {
            switchButton.textContent = "Criar pessoa fisica";
            document.getElementById("Pj").classList = "row";
            document.getElementById("Pf").className = "d-none";
        } else {
            switchButton.textContent = "Criar pessoa juridica";
            document.getElementById("Pf").classList = "row";
            document.getElementById("Pj").className = "d-none";
        }
    })
</script>
